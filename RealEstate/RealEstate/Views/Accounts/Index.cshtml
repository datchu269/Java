
@model RealEstate.Models.RealEstateViewModel.LoginView

@{
    ViewData["Title"] = "Login";
}

    <section class="login-regis" style="padding-top: 105px;">
        <div class="container-login">
            <h2>Đăng nhập</h2>
            <form asp-action="Login" method="post">
                <div class="form-login-group">
                    <label >Email</label>
                    <input type="email" asp-for="UserName" placeholder="Địa chỉ Email">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-login-group">
                    <label>Mật khẩu</label>
                    <input type="password" asp-for="Password" placeholder="Mật khẩu">
                     <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-login-submit">
                    <button type="submit">Xác nhận</button>
                </div>
            </form>
        </div>
    </section>
